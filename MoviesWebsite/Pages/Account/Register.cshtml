@page
@model MoviesWebsite.Pages.RegisterModel
@{
}
<h1>Signup</h1>
<div class="container">
    <div class="row">
        <div class="col-md-1"></div>
        <!--Sign up -->
        <div class="col-md-4">
            <form method="post">
                <div class="form-group">
                    <label asp-for="registerUser" class="control-label"></label>
                    <input asp-for="registerUser.Username" class="form-control" placeholder="Create a username" />
                    <span asp-validation-for="registerUser.Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="registerUser.Password" class="control-label"></label>
                    <input type="password" asp-for="registerUser.Password" class="form-control" placeholder="Create a password" />
                    <span asp-validation-for="registerUser.Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="passwordAgain" class="control-label">Password again </label>
                    <input type="password" asp-for="passwordAgain" class="form-control" placeholder="Repeat same password" />
                    <span asp-validation-for="passwordAgain" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <br />
                    <span class="text-danger">@Model.errorMessage</span>
                    <p></p>
                    <input type="submit" value="Sign up now!" class="btn btn-primary" />
                    <br />
                    <h6>@Model.successMessage</h6>
                </div>
            </form>
        </div>
    </div>

</div>